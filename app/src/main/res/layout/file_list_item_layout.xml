<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="36dp"
            app:srcCompat="@mipmap/list_ico_dir"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:text="名称"
            android:textColor="@android:color/primary_text_light" android:gravity="center_vertical"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="修改日期"
            android:textColor="@color/colorPrimary_black" android:textSize="12sp"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:singleLine="true"
        android:text="类型"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary_black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:text="大小"
        android:gravity="end"
        android:textColor="@color/colorPrimary_black"/>
</LinearLayout>